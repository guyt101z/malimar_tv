<div class='scroller'>

    <div class='tx_detail'>
        <div class='tx_detail_title'>Withdrawals</div>
        <div class='tx_detail_info'><%= @range_withdrawals.count %></div>
    </div>

    <div class='tx_detail'>
        <div class='tx_detail_title'>
        <% if @detail == 'total_payout' %>
            Approved Funds
        <% else %>
            Requested Funds
        <% end %>
        </div>
        <div class='tx_detail_info'>$<%= number_with_precision(@range_balance, precision: 2) %></div>
    </div>

    <div class='tx_detail'>
        <div class='tx_detail_title'>Total Withdrawals</div>
        <div class='tx_detail_info'><%= @withdrawals.count %></div>
    </div>

    <div class='tx_detail'>
        <div class='tx_detail_title'>
            <% if @detail == 'total_payout' %>
                Total Approved Funds
            <% else %>
                Total Requested Funds
            <% end %>
        </div>
        <div class='tx_detail_info'>$<%= number_with_precision(@total_balance, precision: 2) %></div>
    </div>
</div>
