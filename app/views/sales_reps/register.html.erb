<% content_for :top_level, 'Register Client' %>
<% content_for :low_levels, YAML.dump([]) %>
<div id="left-scroll" class="nano">
	<div class="nano-content">
		<div class='row'>
			<div class='col-sm-8 col-xs-12 col-centered' id='register-panel'>
				<%= form_tag register_step_one_path, remote: true do %>
				<div class='panel panel-default'>
					<div class='panel-heading'>
						<h3 class='panel-title' id='register_title'>Register New Customer</h3>
					</div>
					<div class='panel-body' id='register_body'>
						<div class='row'>
							<div class='col-sm-6'>
								<div class='form-group'>
									<%= text_field_tag :first_name, '', class: 'form-control', placeholder: 'First Name' %>
								</div>
							</div>
							<div class='col-sm-6'>
								<div class='form-group'>
									<%= text_field_tag :last_name, '', class: 'form-control', placeholder: 'Last Name' %>
								</div>
							</div>
						</div>
						<div class='row'>
							<div class='col-sm-12'>
								<div class='form-group'>
									<%= email_field_tag :email, '', class: 'form-control', placeholder: 'Email Address' %>
								</div>
							</div>
						</div>
						<div class='row'>
							<div class='col-sm-4'>
								<div class='form-group'>
									<%= text_field_tag :phone_1, '', class: 'form-control', placeholder: 'Home Phone' %>
								</div>
							</div>
							<div class='col-sm-4'>
								<div class='form-group'>
									<%= text_field_tag :phone_2, '', class: 'form-control', placeholder: 'Mobile Phone (Optional)' %>
								</div>
							</div>
							<div class='col-sm-4'>
								<div class='form-group'>
									<%= text_field_tag :phone_3, '', class: 'form-control', placeholder: 'Business Phone (Optional)' %>
								</div>
							</div>
						</div>
						<div class='row'>
							<div class='col-sm-6'>
								<div class='form-group'>
									<%= text_field_tag :address_1, '', class: 'form-control', placeholder: 'Street Address' %>
								</div>
							</div>
							<div class='col-sm-6'>
								<div class='form-group'>
									<%= text_field_tag :address_2, '', class: 'form-control', placeholder: 'Street Address 2 (Optional)' %>
								</div>
							</div>
						</div>
						<div class='row'>
							<div class='col-md-3 col-sm-6'>
								<div class='form-group'>
									<% provinces = [['Alberta','AB'],['British Columbia','BC'],['Manitoba','MN'],['New Brunswick','NB'], ['Newfoundland','NF'], ['Nova Scotia','NS'],['North West Territories','NT'],
									['Nunavut','NU'],['Ontario','ON'],['PEI','PEI'],['QuÃ©bec','QC'],['Saskatchewan','SK'],['Yukon','YK']] %>
									<% states = [
									['Alabama', 'AL'],
									['Alaska', 'AK'],
									['Arizona', 'AZ'],
									['Arkansas', 'AR'],
									['California', 'CA'],
									['Colorado', 'CO'],
									['Connecticut', 'CT'],
									['Delaware', 'DE'],
									['District of Columbia', 'DC'],
									['Florida', 'FL'],
									['Georgia', 'GA'],
									['Hawaii', 'HI'],
									['Idaho', 'ID'],
									['Illinois', 'IL'],
									['Indiana', 'IN'],
									['Iowa', 'IA'],
									['Kansas', 'KS'],
									['Kentucky', 'KY'],
									['Louisiana', 'LA'],
									['Maine', 'ME'],
									['Maryland', 'MD'],
									['Massachusetts', 'MA'],
									['Michigan', 'MI'],
									['Minnesota', 'MN'],
									['Mississippi', 'MS'],
									['Missouri', 'MO'],
									['Montana', 'MT'],
									['Nebraska', 'NE'],
									['Nevada', 'NV'],
									['New Hampshire', 'NH'],
									['New Jersey', 'NJ'],
									['New Mexico', 'NM'],
									['New York', 'NY'],
									['North Carolina', 'NC'],
									['North Dakota', 'ND'],
									['Ohio', 'OH'],
									['Oklahoma', 'OK'],
									['Oregon', 'OR'],
									['Pennsylvania', 'PA'],
									['Puerto Rico', 'PR'],
									['Rhode Island', 'RI'],
									['South Carolina', 'SC'],
									['South Dakota', 'SD'],
									['Tennessee', 'TN'],
									['Texas', 'TX'],
									['Utah', 'UT'],
									['Vermont', 'VT'],
									['Virginia', 'VA'],
									['Washington', 'WA'],
									['West Virginia', 'WV'],
									['Wisconsin', 'WI'],
									['Wyoming', 'WY']] %>
									<%= text_field_tag :state_input, '', class: 'form-control', placeholder: 'State', style: 'display:none' %>
									<%= select_tag :province, options_for_select(provinces), class: 'form-control', placeholder: 'Province', style: 'display:none' %>
									<%= select_tag :state, options_for_select(states), class: 'form-control', placeholder: 'State' %>
								</div>
							</div>
							<div class='col-md-3 col-sm-6'>
								<div class='form-group'>
									<%= text_field_tag :city, '', class: 'form-control', placeholder: 'City' %>
								</div>
							</div>
							<div class='col-md-3 col-sm-6'>
								<div class='form-group'>
									<%= text_field_tag :zip, '', class: 'form-control', placeholder: 'Postcode / Zip Code' %>
								</div>
							</div>
							<div class='col-md-3 col-sm-6'>
								<div class='form-group'>
									<%= country_select('', '', {priority_countries: ['US','CA']}, { class: 'form-control input-md', name: 'country', id: 'country' }) %>
								</div>
							</div>
						</div>
					</div>
					<div class='panel-footer text-right' id=''>
						<%= submit_tag 'Register', class: 'btn btn-primary', data: {disable_with: 'Registering...'} %>
					</div>
				</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
<script type="text/javascript">
	$('#register_link').addClass('active')
</script>
