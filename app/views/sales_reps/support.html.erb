<div class='container' style='margin-top: 60px;'>
	<div class='row'>
		<div class='col-md-6 col-centered'>
			<div class='panel panel-info'>
				<div class='panel-heading'>
					<h3 class='panel-title'>Open Tickets</h3>
				</div>
				<div class='panel-body' style='padding:0'>
					<div class='tickets'>
						<% @cases.each do |ticket| %>
						<div id='ticket_<%= ticket.id %>' class='ticket' onclick='viewTicket(<%= ticket.id %>)'>
							<p class='title'><%= ticket.title %></p>
							<p class='timestamp'><%= distance_of_time_in_words(ticket.created_at, DateTime.now) %> ago</p>
							<p><%= ticket.issue_description.truncate(80) %></p>
							<div class='row' style='margin:0'>
								<div class='col-sm-6' style='padding-left:0'>
									<p class='detail'>
										<strong>Priority:</strong><br>
										High
									</p>
								</div>
								<div class='col-sm-6' style='padding-right:0'>
									<p class='detail'>
										<strong>Category:</strong><br>
										Billing
									</p>
								</div>
							</div>
						</div>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<%= render('support/partials/support_modal_sales_rep') %>

<script type="text/javascript">
function viewTicket(id) {
	$.ajax({
		url: '<%= sales_rep_view_ticket_path %>?id='+id
	})
}
<% if params[:id].present? %>
$('#ticket_<%= params[:id] %>').click()
<% end %>
</script>