$('#first_name-error').remove()
$('#last_name-error').remove()
$('#email-error').remove()


<% if @sales_rep.errors.any? %>
    <% if @sales_rep.errors[:first_name].present? %>
        $('#first_name').after('<div class="text-danger" id="first_name-error">First name <%= @sales_rep.errors[:first_name].join(", ") %></div>')
    <% end %>
    <% if @sales_rep.errors[:last_name].present? %>
        $('#last_name').after('<div class="text-danger" id="address_2-error">Last name <%= @sales_rep.errors[:last_name].join(", ") %></div>')
    <% end %>
    <% if @sales_rep.errors[:email].present? %>
        $('#email').after('<div class="text-danger" id="email-error">Email address <%= @sales_rep.errors[:email].join(", ") %></div>')
    <% end %>

    addNotification('error', 'Your account could not be updated, please see form for further information', 'Error', 'exclamation-circle')
<% else %>
    addNotification('success', 'Your account has been updated', 'Success', 'check-circle')
<% end %>
