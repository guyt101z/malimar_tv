<% content_for :top_level, 'Support' %>
<% content_for :low_levels, YAML.dump(['New Ticket']) %>
<div id="left-scroll" class="nano">
	<div class="nano-content">
		<div class='row'>
			<div class='col-md-6 col-centered'>
				<div class='panel panel-default'>
					<%= form_tag sales_rep_create_ticket_path, remote: true do %>
					<div class='panel-heading'>
						<h3 class='panel-title'>New Ticket</h3>
					</div>
					<div class='panel-body'>
						<div class='row'>
							<div class='col-sm-12'>
								<div class='form-group'>
									<label>Title</label>
									<%= text_field_tag :title, '', class: 'form-control' %>
								</div>
							</div>
						</div>
						<div class='row'>
							<div class='col-sm-6'>
								<div class='form-group'>
									<label>Priority</label>
									<%= select_tag :priority, options_for_select([['---',nil],['Low',0],['Medium',2],['High',3]]), class: 'form-control' %>
								</div>
							</div>
							<div class='col-sm-6'>
								<div class='form-group'>
									<label>Category</label>
									<%= select_tag :category, options_for_select([['---',nil],'Billing','Bug Report','General Help']), class: 'form-control' %>
								</div>
							</div>
						</div>
						<div class='row'>
							<div class='col-sm-12'>
								<div class='form-group'>
									<label>Issue/Description</label>
									<%= text_area_tag :issue_description, '', class: 'form-control', style: 'resize:vertical' %>
								</div>
							</div>
						</div>
					</div>
					<div class='panel-footer text-right'>
						<%= submit_tag 'Create Ticket', class: 'btn btn-primary', data: {disable_with: 'Submitting...'} %>
					</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
<script type="text/javascript">
$('#new_ticket').addClass('active')
</script>
