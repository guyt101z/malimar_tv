<div class='container'>
    <div class='row'>
        <div class='col-xs-12'><h2 class='page-header'>Mail Settings</h2></div>
        <div class='col-md-3 col-sm-4'>
            <%= render 'admins/nav/mail_side_nav' %>
        </div>
        <div class='col-md-9 col-sm-8'>
            <div class='row'>
                <div class='col-md-6'>
                    <%= form_tag update_smtp_path, remote: true do %>
                    <div class='panel panel-default'>
                        <div class='panel-heading' style='position:relative'>
                            <h3 class='panel-title'>SMTP Credentials</h3>
                            <div class='upload_image_heading'>
                                <%= submit_tag 'Update Settings', class: 'btn btn-primary btn-sm', data: {disable_with: 'Updating...'} %>
                            </div>
                        </div>
                        <div class='panel-body'>
                            <div class='form-group'>
                                <label>Server Address</label>
                                <%= text_field_tag :address, @smtp[:address], class: 'form-control' %>
                            </div>
                            <div class='form-group'>
                                <label>Port</label>
                                <%= text_field_tag :port, @smtp[:port], class: 'form-control' %>
                            </div>
                            <div class='form-group'>
                                <label>Username</label>
                                <%= text_field_tag :user_name, @smtp[:user_name], class: 'form-control' %>
                            </div>
                            <div class='form-group'>
                                <label>Password</label>
                                <%= text_field_tag :password, @smtp[:password], class: 'form-control' %>
                            </div>
                            <div class='form-group'>
                                <label>Domain</label>
                                <%= text_field_tag :domain, @smtp[:domain], class: 'form-control' %>
                            </div>
                        </div>
                    </div>
                    <% end %>
                </div>
                <div class='col-md-6'>
                    <div>
                    <%= form_tag update_mailchimp_path, remote: true do %>
                    <div class='panel panel-default'>
                        <div class='panel-heading' style='position:relative'>
                            <h3 class='panel-title'>MailChimp API Key</h3>
                            <div class='upload_image_heading'>
                                <%= submit_tag 'Update Settings', class: 'btn btn-primary btn-sm', data: {disable_with: 'Updating...'} %>
                            </div>
                        </div>
                        <div class='panel-body'>
                            <div class='form-group'>
                                <label>API Key</label>
                                <%= text_field_tag :api_key, @mailchimp[:api_key], class: 'form-control' %>
                            </div>
                            <div class='form-group'>
                                <label>List ID/Name</label>
                                <%= text_field_tag :list_id, @mailchimp[:list_id], class: 'form-control' %>
                            </div>
                        </div>
                    </div>
                    <% end %>
                    </div>
                    <div>
                    <%= form_tag update_send_address_path, remote: true do %>
                    <div class='panel panel-default'>
                        <div class='panel-heading' style='position:relative'>
                            <h3 class='panel-title'>Default Send Address</h3>
                            <div class='upload_image_heading'>
                                <%= submit_tag 'Update Settings', class: 'btn btn-primary btn-sm', data: {disable_with: 'Updating...'} %>
                            </div>
                        </div>
                        <div class='panel-body'>
                            <div class='form-group'>
                                <label>Email Address</label>
                                <%= email_field_tag :send_address, @send_address, class: 'form-control' %>
                            </div>
                        </div>
                    </div>
                    <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $('#mail_api').addClass('active')
</script>
