<% if @movie.errors.any? %>
	addNotification('error','There was an error uploading your file','Error','<%= notif_icons[:error] %>')
<% else %>
	$('#video_<%= @movie.id %>').children(".image-wrapper").html('<%= image_tag @movie.image_url(:preview).to_s %>')
	addNotification('success','Your file has been successfully uploaded','Success','<%= notif_icons[:success] %>')
<% end %>
