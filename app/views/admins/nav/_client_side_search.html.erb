<% users = User.all.order(last_name: :asc) %>
<div class="right-side">
    <div class="panel">
        <div class="panel-heading ptb0">
            <form class="form-search1">
                <input type="text" placeholder="Quick Search" class="form-control">
                <span class="glyphicon glyphicon-search"></span>
            </form>
        </div>
        <div class="panel-body plr0">
            <div id="right-scroll" class="nano">
                <div class="nano-content">
                    <ul class="nav list-user">
                        <% users.each do |user| %>
                        <li>
                            <a data-container="body" data-toggle="popover" data-placement="left" data-html="true" data-title="<div class='text-bold'><%= user.name %></div> <%= user.area %>" data-content="Client: #25477931AE<br><% if user.expiry.nil? || user.expiry < Date.today %>Free Member<% else %>Premium: <%= distance_of_time_in_words_to_now(user.expiry) %><% end %><br><% if user.last_seen.nil? || user.last_seen < 5.minutes.ago %><span class='online'></span> Active<% end %>  <a href='#' class='popover-footer'>Manage Client</a>"><span class="icon-circle-user"></span> <%= user.name %></a>

                        </li>
                        <% end %>
                    </ul>
                </div>
            </div>
            <div class="btn-wrap">
                <a href="#" class="btn btn-default btn-sm btn-block">New Client</a>
            </div>
            <div class="stat-number">
                <div class="number">28</div>
                New Members Today
            </div>
        </div>
    </div>
</div><!--right-side-->
