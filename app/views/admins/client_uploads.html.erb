<% content_for :top_level, 'Migrations' %>
<% content_for :low_levels, YAML.dump(['Clients']) %>
<div id="left-scroll" class="nano">
    <div class="nano-content">
        <div class='panel panel-default'>
            <div class='panel-heading'>
                <h3 class='panel-title'>Migrated Grids</h3>
            </div>
            <div class='panel-body'>
                <table id='migrations' class='table table-list fz11-5 table-hover'>
                    <thead><tr>
                        <td>ID
                            <span class="sort">
                                <span class="fa fa-angle-up"></span>
                                <span class="fa fa-angle-down"></span>
                            </span>
                        </td>
                        <td>Uploaded At
                            <span class="sort">
                                <span class="fa fa-angle-up"></span>
                                <span class="fa fa-angle-down"></span>
                            </span>
                        </td>
                        <td>Updated At
                            <span class="sort">
                                <span class="fa fa-angle-up"></span>
                                <span class="fa fa-angle-down"></span>
                            </span>
                        </td>
                        <td>Status
                            <span class="sort">
                                <span class="fa fa-angle-up"></span>
                                <span class="fa fa-angle-down"></span>
                            </span>
                        </td>
                    </tr></thead>
                    <% ClientMigration.all.each do |migration| %>
                        <tr onclick='window.location = "<%= view_vod_upload_path(id: migration.id) %>"' style='cursor:pointer'>
                            <td><%= migration.id %></td>
                            <td><%= migration.created_at.strftime('%B %-d, %Y %H:%M %p') %></td>
                            <td><%= migration.updated_at.strftime('%B %-d, %Y %H:%M %p') %></td>
                            <% if migration.status? %>
                                <td>Completed</td>
                            <% else %>
                                <td>In Progress</td>
                            <% end %>
                        </tr>
                    <% end %>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    $('#all_client').addClass('active')
    $('#migrations').dataTable()
</script>
