<% content_for :top_level, 'Migrations' %>
<% content_for :low_levels, YAML.dump(['VOD',@migration.name]) %>
<div id="left-scroll" class="nano">
    <div class="nano-content">
        <div class='panel panel-default'>
            <div class='panel-heading'>
                <h3 class='panel-title'>Migrations for <%= @migration.name %></h3>
            </div>
            <div class='panel-body'>
                <table id='migrations' class='table table-list fz11-5 table-hover table-striped'>
                    <thead><tr>
                        <td>ID
                            <span class="sort">
                                <span class="fa fa-angle-up"></span>
                                <span class="fa fa-angle-down"></span>
                            </span>
                        </td>
                        <td>Status
                            <span class="sort">
                                <span class="fa fa-angle-up"></span>
                                <span class="fa fa-angle-down"></span>
                            </span>
                        </td>
                        <td>Error
                            <span class="sort">
                                <span class="fa fa-angle-up"></span>
                                <span class="fa fa-angle-down"></span>
                            </span>
                        </td>
                        <td>Completed
                            <span class="sort">
                                <span class="fa fa-angle-up"></span>
                                <span class="fa fa-angle-down"></span>
                            </span>
                        </td>
                        <td>Updated
                            <span class="sort">
                                <span class="fa fa-angle-up"></span>
                                <span class="fa fa-angle-down"></span>
                            </span>
                        </td>
                    </tr></thead>
                    <% @migration_items.each do |item| %>
                        <tr>
                            <td><%= item.id %></td>
                            <td><%= item.status %></td>
                            <td><%= item.error %></td>
                            <% if item.completed == true %>
                                <td>Completed</td>
                            <% else %>
                                <td>Not completed</td>
                            <% end %>
                            <td><%= item.updated_at %></td>
                        </tr>
                    <% end %>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function(){
        $('#all_vod').addClass('active')
        $('#migrations').dataTable()
    })
</script>
