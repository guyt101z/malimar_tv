        $('#tx_details').html("<div class='stat-number'><div class='number'><i class='fa fa-refresh fa-spin'></i></div>Loading Details</div>")

        $.ajax({
            url: '/admin_choose_plan?user_id='+id+'&plan_id='+$('#plan_id').val()
