<%= form_tag add_grid_path, remote: true do %>
<div class="modal fade" id="new_grid_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="myModalLabel">New Grid</h4>
            </div>
            <div class="modal-body">
                <div class='row'>
                    <div class='col-sm-12 form-group'>
                        <label>Grid Name</label>
                        <%= text_field_tag :new_name, '', class: 'form-control' %>
                    </div>
                </div>
                <div class='row'>
                    <div class='col-sm-6 form-group'>
                        <label>Grid Number</label>
                        <%= number_field_tag :new_rank, '', class: 'form-control' %>
                    </div>
                    <div class='col-sm-6 form-group'>
                        <label>Genre</label>
                        <%= text_field_tag :new_genre, '', class: 'form-control' %>
                    </div>
                </div>
                <div class='row'>
                    <div class='col-sm-6 form-group'>
                        <label>Class Filter</label>
                        <%= select_tag :new_item_type, options_for_select([['',nil],['On Demand TV/Radio', 'shows'],['Movies','movies'],['Live TV/Radio','live']]), class: 'form-control' %>
                    </div>
                    <div class='col-sm-6 form-group'>
                        <label>Content Type</label>
                        <%= select_tag :new_content_type, options_for_select([['Any',nil],'Audio','Video']), class: 'form-control' %>
                    </div>
                </div>
                <div class='row'>
                    <div class='col-sm-6 form-group'>
                        <label>Show on Front Page?</label>
                        <%= select_tag :new_front_page, options_for_select([['No',false],['Yes', true]]), class: 'form-control' %>
                    </div>
                    <div class='col-sm-6 form-group'>
                        <label>Sort Method</label>
                        <%= select_tag :new_sort, options_for_select(['Alphabetical','New Arrivals/Episodes','Random']), class: 'form-control' %>
                    </div>
                </div>
                <div class='row'>
                    <div class='col-sm-6 form-group'>
                        <label>Membership</label>
                        <%= select_tag :new_free, options_for_select([['',nil],['Free', true],['Premium', false]]), class: 'form-control' %>
                    </div>
                    <div class='col-sm-6 form-group'>
                        <label>Content Quality</label>
                        <%= select_tag :new_content_quality, options_for_select([['Any',nil],['High Definition','HD'],['Standard Definition', 'SD']]), class: 'form-control' %>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <%= submit_tag 'Save Grid', class: 'btn btn-primary' %>
            </div>
        </div>
    </div>
</div>
<% end %>
<script>
$("#new_rank").keydown(function (e) {
    // Allow: backspace, delete, tab, escape, enter and .
    if ($.inArray(e.keyCode, [46, 8, 9, 27, 13]) !== -1 ||
         // Allow: Ctrl+A
        (e.keyCode == 65 && e.ctrlKey === true) ||
         // Allow: home, end, left, right
        (e.keyCode >= 35 && e.keyCode <= 39)) {
             // let it happen, don't do anything
             return;
    }
    // Ensure that it is a number and stop the keypress
    if ((e.shiftKey || (e.keyCode < 48 || e.keyCode > 57)) && (e.keyCode < 96 || e.keyCode > 105)) {
        e.preventDefault();
    }
});
</script>
