<% content_for :top_level, 'Utilities' %>
<% content_for :low_levels, YAML.dump(['Administrator Management','New Administrator']) %>
<div id="left-scroll" class="nano">
    <div class="nano-content">
        <div class='row'>
            <div class='col-md-6 col-sm-8 col-centered'>
                <%= form_tag create_admin_path, remote: true do %>
                <div class='panel panel-default'>
                    <div class='panel-heading'>
                        <h3 class='panel-title'>New Admin Info</h3>
                    </div>
                    <div class='panel-body'>
                        <div class='row'>
                            <div class='col-md-6 form-group'>
                                <label>First Name</label>
                                <%= text_field_tag :first_name, '', class: 'form-control' %>
                            </div>
                            <div class='col-md-6 form-group'>
                                <label>Last Name</label>
                                <%= text_field_tag :last_name, '', class: 'form-control' %>
                            </div>
                            <div class='col-md-12 form-group'>
                                <label>Email Address</label>
                                <%= email_field_tag :email, '', class: 'form-control' %>
                            </div>
                            <div class='col-md-12'>
                                <label>Role</label>
                                <% unless current_admin.role == 'Root' %>
                                    <%= select_tag :role_id, options_for_select(@roles_array), class: 'form-control' %>
                                <% else %>
                                    <% @roles_array.push(['Root',0]) %>
                                    <%= select_tag :role_id, options_for_select(@roles_array), class: 'form-control' %>
                                <% end %>
                            </div>
                        </div>
                    </div>
                    <div class='panel-footer'>
                        <%= submit_tag 'Create Admin', class: 'btn btn-primary', style: 'width: 100%' %>
                    </div>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
