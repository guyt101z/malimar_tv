<% content_for :top_level, 'Utilities' %>
<% content_for :low_levels, YAML.dump(['General Settings','Withdrawal Limits']) %>
<div id="left-scroll" class="nano">
    <div class="nano-content">
        <div class='col-md-7 col-sm-9 col-centered'>
            <div class='row'>
                <div class='col-sm-6'>
                    <div class='panel panel-default'>
                        <div class='panel-heading'>
                            <h3 class='panel-title'>Current Minimum</h3>
                        </div>
                        <div class='panel-body text-center', style='font-size: 180%'>
                            $<%= number_with_precision(@limits[:min], precision: 2) %>
                        </div>
                    </div>
                    <%= form_tag update_lower_wd_limit_path do %>
                    <div class='panel panel-default'>
                        <div class='panel-heading'>
                            <h3 class='panel-title'>Set New Minimum</h3>
                        </div>
                        <div class='panel-body text-center', style='font-size: 180%'>
                            <%= text_field_tag :min, @limits[:min], class: 'form-control', onkeypress: 'return isNumberKey(event)' %>
                        </div>
                        <div class='panel-footer'>
                            <%= submit_tag 'Update', class: 'btn btn-primary', style: 'width: 100%' %>
                        </div>
                    </div>
                    <% end %>
                </div>
                <div class='col-sm-6'>
                    <div class='panel panel-default'>
                        <div class='panel-heading'>
                            <h3 class='panel-title'>Current Maximum</h3>
                        </div>
                        <div class='panel-body text-center', style='font-size: 180%'>
                            $<%= number_with_precision(@limits[:max], precision: 2) %>
                        </div>
                    </div>
                    <%= form_tag update_upper_wd_limit_path do %>
                    <div class='panel panel-default'>
                        <div class='panel-heading'>
                            <h3 class='panel-title'>Set New Maximum</h3>
                        </div>
                        <div class='panel-body text-center', style='font-size: 180%'>
                            <%= text_field_tag :max, @limits[:max], class: 'form-control', onkeypress: 'return isNumberKey(event)' %>
                        </div>
                        <div class='panel-footer'>
                            <%= submit_tag 'Update', class: 'btn btn-primary', style: 'width: 100%' %>
                        </div>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $('#withdrawal_limits').addClass('active')
</script>
