<% if @user.errors.any? %>
    var notification = new NotificationFx({
        message : '<p>There was an error saving the balance.</p>',
        layout : 'growl',
        effect : 'jelly',
        type : 'danger', // notice, warning, error or success
        num: <%= (100 + rand(10000)).to_s %>
    });
    notification.show()
<% else %>
    $('#user_balance').html('$<%= number_with_precision(@user.balance, precision: 2) %>')
    $('#balance_2').html('$<%= number_with_precision(@user.balance, precision: 2) %>')
    var notification = new NotificationFx({
        message : '<p>Balance updated.</p>',
        layout : 'growl',
        effect : 'jelly',
        type : 'success', // notice, warning, error or success
        num: <%= (100 + rand(10000)).to_s %>
    });
    notification.show()
    $('#add_balance').val('')
    $('#tx_details').html("<div class='stat-number'><div class='number'><i class='fa fa-refresh fa-spin'></i></div>Loading Details</div>")

    $.ajax({
        url: '/admin_choose_plan?user_id=<%= @user.id %>&plan_id='+$('#plan_id').val()
    })
<% end %>
