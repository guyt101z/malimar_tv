<% content_for :top_level, 'Sales Representatives' %>
<% content_for :low_levels, YAML.dump([]) %>
<div id="left-scroll" class="nano">
	<div class="nano-content">
		<div class='row'>
			<div class='col-xs-12'>
				<div class='panel panel-default'>
					<div class='panel-heading'>
						<h3 class='panel-title'>Search Sales Representatives</h3>
					</div>
					<div class='panel-body'>
						<table class='table table-hover table-bordered' id='sales_rep_table'>
							<thead><tr>
								<th>ID</th>
								<th>Last Name</th>
								<th>First Name</th>
								<th>Email</th>
								<th>Country</th>
								<th>Current Balance</th>
								<th>Pending Balance</th>
								<th>Pending Withdrawals</th>
							</tr></thead>
							<% @reps.each do |rep| %>
								<tr onclick='window.location = "<%= view_rep_path(id: rep.id) %>"' style='cursor:pointer'>
									<th><%= rep.id %></th>
									<td><%= rep.last_name %></td>
									<td><%= rep.first_name %></td>
									<td><%= rep.email %></td>
									<td><%= rep.country %></td>
									<td>$<%= number_with_precision(rep.current_balance, precision: 2) %></td>
									<td>$<%= number_with_precision(rep.pending_balance, precision: 2) %></td>
									<td>$<%= number_with_precision(rep.pending_withdrawals, precision: 2) %></td>
								</tr>
							<% end %>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<script>
	$('#sales_rep_table').dataTable()
	$('#all_reps').addClass('active')
</script>
