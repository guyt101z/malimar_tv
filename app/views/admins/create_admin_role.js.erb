$('#name-error').remove()
<% if @role.errors.any? %>
    <% if @role.errors[:name].present? %>
        $('#name').after('<div class="text-danger" id="name-error">Name <%= @role.errors[:name].join(", ") %>')
    <% end %>
    addNotification('error', 'Role could not be saved, please check form for errors and try again', 'Error', 'exclamation-circle')
<% else %>
    window.location = '<%= role_url(id: @role.id) %>'
<% end %>
