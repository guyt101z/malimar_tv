            <%= text_field_tag :state_input, '', class: 'form-control', style: 'display:none' %>
            <%= select_tag :province, options_for_select(provinces), class: 'form-control', placeholder: 'Province', style: 'display:none' %>
            <%= select_tag :state, options_for_select(states), class: 'form-control', placeholder: 'State' %>
        </div>
        <div class="form-group">
            <label for="">Postcode / Zip Code <span class="text-danger" id='zip_required'>*</span></label>
            <%= text_field_tag :zip, '', class: 'form-control input-md' %>
        </div>
        <div class="form-group">
            <label for="">Country <span class="text-danger">*</span></label>
            <%= country_select('', '', {priority_countries: ['US','CA']}, { class: 'form-control input-md', name: 'country', id: 'country' }) %>
        </div>
    </div>
</div>
<div class="line"></div>
<h4 class="title"><span class="icon-circle-key mr7"></span> Account Information</h4>
<div class="row">
    <div class="col-sm-6">
        <div class="form-group">
            <label for="">Password <span class="text-danger">*</span></label>
            <%= password_field_tag :password, '', class: 'form-control input-md' %>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="form-group">
            <label for="">&nbsp;</label>
            <div class="media mt0">
                <div class="pull-left"><span class="fa fa-question-circle"></span></div>
                <div class="media-body fz12-5">
                    It will be automatically sent to the client by Email.
                </div>
            </div>
        </div>
    </div>
</div>

<script>
$('#country').change(function(){
    if ($(this).val() == 'CA'){
        $('#province').show()
        $('#state').hide()
        $('#state_input').hide()
        $('#zip_required').show()
    }
    else if ($(this).val() == 'US'){
        $('#province').hide()
        $('#state').show()
        $('#state_input').hide()
        $('#zip_required').show()
    }
    else {
        $('#province').hide()
        $('#state').hide()
        $('#state_input').show()
        $('#zip_required').hide()
    }
})

</script>
