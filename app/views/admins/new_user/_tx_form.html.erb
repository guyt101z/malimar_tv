        if ($('#tx_to_process').val() == 'true'){
            $('#tx_form').hide()
            $('#tx_to_process').val(false)
            $('#tx_toggle').html('Register Transaction')
        }
        else {
            $('#tx_form').show()
            $('#tx_to_process').val(true)
