<script type="text/javascript">
$('#search_bar').focus(function(){
  	$('#search_bar').animate({
		width: '300px'
	},200).attr('placeholder', 'What do you want to watch?')
	$('#search_list').show()
	$('#search_list').animate({
		width: '300px',
		top: '50px'
	},200)
})
$('#search_bar').blur(function(){
	$('#search_bar').animate({
		width: '172px'
	},200).attr('placeholder', 'Search')
	$('#search_list').animate({
		width: '172px',
		top: (($('#search_list').height()*(-1))+50)+'px'
	},200)
	setTimeout(function(){$('#search_list').hide()}, 200)
})
$('#search_bar').on('keyup',function(){
	if (!$('#genre').val()) {
		$.ajax({
			url: '/search_suggestions?search='+$('#search_bar').val()
		})
	}
	else {
		$.ajax({
			url: '/search_suggestions?search='+$('#search_bar').val()+'&genre='+$('#genre').val()
		})
	}
})
</script>