<div class="content" style='margin-top: 10px'>
    <div class="container">
        <div class="mlr90">
            <div class='row'>
                <div class='col-md-8 col-sm-10 col-centered' style='float:none'>
                    <div class='row'>
                        <div class='col-sm-6'>
                            <%= form_tag user_reset_password_path, remote: true do %>
                            <div class="panel-default panel">
                                <div class='panel-heading'>
                                    <h4 class="panel-title name">Password Reset</h4>
                                </div>
                                <div class='panel-body'>
                                    <div class="form-group">
                                        <%= password_field_tag :current, '', class: 'form-control', placeholder: 'Current Password' %>
                                    </div>
                                    <div class="form-group">
                                        <%= password_field_tag :new, '', class: 'form-control', placeholder: 'New Password' %>
                                    </div>
                                    <div class="form-group">
                                        <%= password_field_tag :new_confirmation, '', class: 'form-control', placeholder: 'Confirm New Password' %>
                                    </div>
                                </div>
                                <div class='panel-footer text-right'>
                                    <%= submit_tag 'Reset Password', class: 'btn btn-primary', data: {disable_with: 'Resetting...'}, onclick: 'clearErrors()' %>
                                </div>
                            </div>
                            <% end %>
                        </div>
                        <div class='col-sm-6'>
                            <div class="panel-default panel">
                                <div class='panel-heading'>
                                    <h4 class="panel-title name">Newsletter Subscription</h4>
                                </div>
                                <div class='panel-body'>
                                    <% if @subscribed == true %>
                                        <h3 style='margin: 5px 0 20px' id='subscribed'>Subscribed</h3>
                                    <% else %>
                                        <h3 style='margin: 5px 0 20px' id='subscribed'>Not Subscribed</h3>
                                    <% end %>
                                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut convallis magna in elementum facilisis.</p>
                                </div>
                                <div class='panel-footer text-right'>
                                    <% if @subscribed == true %>
                                        <%= link_to 'Unsubscribe', user_unsubscribe_from_mailchimp_path, class: 'btn btn-primary', data: {disable_with: 'Updating...'}, remote: true, onclick: "$('#subscribe-error').remove()" %>
                                    <% else %>
                                        <%= link_to 'Subscribe', user_subscribe_to_mailchimp_path, class: 'btn btn-primary', data: {disable_with: 'Updating...'}, remote: true, onclick: "$('#subscribe-error').remove()" %>
                                    <% end %>
                                </div>
                            </div>
                            <div class="panel-default panel">
                                <div class='panel-heading'>
                                    <h4 class="panel-title name">Refer A Friend</h4>
                                </div>
                                <div class='panel-body'>
                                    <p style='margin:0'>Your Referral Code:</p>
                                    <h3 style='margin: 0' id='subscribed'><%= current_user.refer_code %></h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $('#settings').addClass('active')
    function clearErrors(){
        $('#current-error').remove()
        $('#confirmation-error').remove()
        $('#length-error').remove()
        $('#success').remove()
    }
</script>
