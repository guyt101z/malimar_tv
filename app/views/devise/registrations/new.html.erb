<div class="content">
	<div class="container">
        <div class="mlr90">
            <%= form_tag free_trial_1_path, id: 'new_user_form', remote: true do %>
            <div class="box-white">

            	<h4 class="title4">Your Information</h4>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                        	<%= text_field_tag :first_name, '', class: 'form-control', placeholder: 'First Name' %>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                        	<%= text_field_tag :last_name, '', class: 'form-control', placeholder: 'Last Name' %>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                        	<%= text_field_tag :email, '', class: 'form-control', placeholder: 'Email Address' %>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                        	<%= text_field_tag :phone, '', class: 'form-control', placeholder: 'Phone' %>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                        	<%= text_field_tag :address_1, '', class: 'form-control', placeholder: 'Street Address' %>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                        	<%= text_field_tag :address_2, '', class: 'form-control', placeholder: 'Street Address 2 (Optional)' %>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                	<%= select_tag :country, options_for_select([['Select One', nil], 'Canada', 'United States', ['This will be configurable', nil]]), class: 'form-control' %>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                	<%= text_field_tag :state, '', class: 'form-control', placeholder: 'State' %>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                	<%= text_field_tag :city, '', class: 'form-control', placeholder: 'City' %>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                	<%= text_field_tag :zip, '', class: 'form-control', placeholder: 'Zip Code' %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <hr>
                <h4 class="title4">Account Information</h4>
                <div class="row">
                    <div class="col-sm-3">
                        <div class="form-group">
                        	<%= password_field_tag :password, '', class: 'form-control', placeholder: 'Password' %>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                        	<%= password_field_tag :password_confirmation, '', class: 'form-control', placeholder: 'Confirm Password' %>
                        </div>
                    </div>
                </div>

                <!--<hr>
                <h4 class="title4">Profile Picture</h4>
                <div class="row">
