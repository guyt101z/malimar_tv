<div class="content">
	<div class="container">
    	<div class="row">
        	<div class="col-sm-4 col-md-3">
            	<div class="panel panel-custom">
                	<div class="panel-heading">
                    	<h3 class="fz14"><%= @show.name %></h3>
                    </div>
                    <div class="panel-body b0">
                        <%= image_tag @show.image_url, class: 'img-responsive' %>
                    </div>
                </div>
                <!--<div class="socials">
                	<a href="#"><span class="fb"></span></a>
                	<a href="#"><span class="tw"></span></a>
                	<a href="#"><span class="rss"></span></a>
                </div>-->
            </div>
            <div class="col-sm-8 col-md-9">
           		<div class="box-white">
                	<div class="data-bb clearfix">
                    	<div class="pull-left">
                            <div class="fz12-5">
								<% if Episode.where(show_id: @show.id).any? %>
									Latest episode: <%= @show.latest_episode %></div>
								<% end %>
                        </div>
                        <div class="pull-right">
                        	<div class="fz12-5"><%= pluralize(@show.episode_count, 'Episode') %></div>
                        </div>
                    </div>
                    <div class="data-bb">
                	       <%= simple_format(@show.synopsis) %>
                    </div>
                    <% @episodes.each do |episode| %>
                    <div class="box-episode clearfix">
                    	<a href="/watch/shows/<%= @show.id %>/<%= episode.episode_number %>">
                    		<span class="fz12-5"><%= episode.release_date %></span> - Episode <%= episode.episode_number %> - <%= episode.title %>
                            <i class='fa fa-play-circle-o play-icon'></i>
                        </a>
                    </div>
                    <% end %>
					<div class='text-center'>
						<%= will_paginate(@episodes) %>
					</div>
                </div>
				<%= render 'videos/partials/similar_links' %>
            </div>
        </div>
    </div>
</div><!--content-->
<% if (user_signed_in? && current_user.premium?) || admin_signed_in?  %>
	<!-- Nothing -->
<% elsif user_signed_in? && current_user.expired? %>
	<% if @show.free? %>
		<%= render('videos/partials/expired_account_modal') %>
		<script>$('#modal-expired').modal({show: true})</script>
	<% else %>
		<%= render('videos/partials/expired_account_modal') %>
		<script>
			$('#modal-expired').modal({show: true, keyboard: false, backdrop: 'static'})
			$('#modal-expired').on('hidden.bs.modal', function () {
				window.location = '/'
			})
		</script>
	<% end %>
<% elsif user_signed_in? && user.premium == false && @show.free == false %>
	<%= render('videos/partials/no_plan') %>
	<script>
		$('#modal-no-plan').modal({show: true, keyboard: false, backdrop: 'static'})
		$('#modal-no-plan').on('hidden.bs.modal', function () {
			window.location = '/'
		})
	</script>
<% else %>
	<%= render('videos/partials/sign_in_modal_show') %>
	<script>
		$('#modal-login').modal({show: true, keyboard: false, backdrop: 'static'})
		$('#modal-login').on('hidden.bs.modal', function () {
			window.location = '/'
		})
	</script>
<% end %>
