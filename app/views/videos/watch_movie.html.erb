<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-md-3">
                <div class="panel panel-custom">
                    <div class="panel-heading">
                        <h3 class="fz14"><%= @movie.name %></h3>
                    </div>
                    <div class="panel-body b0">
                        <%= image_tag @movie.image_url, class: 'img-responsive' %>
                    </div>
                </div>
                <div class="socials">
                    <a href="#"><span class="fb"></span></a>
                    <a href="#"><span class="tw"></span></a>
                    <a href="#"><span class="rss"></span></a>
                </div>
            </div>
            <div class="col-sm-8 col-md-9">
                <div class="box-white">
                    <div class="data-bb clearfix">
                        <div class="pull-left">
                            <strong><%= @movie.name %></strong>
                            <div class="fz12-5"><%= @movie.release_date.strftime('%B %-d, %Y') %></div>
                        </div>
                    </div>
                    <div class='video_wrapper' id='video_wrapper'>

                    </div>
                    <div class="data-bb">
                        <%= simple_format(@movie.synopsis) %>
                    </div>
                </div>
                <%= render 'videos/partials/similar_links' %>
            </div>
        </div>
    </div>
</div><!--content-->
<script>
<% if @movie.rtmp_url.present? %>
jwplayer("video_wrapper").setup({
    sources: [
        {file: "<%= @movie.rtmp_url %>"},
        {file: "<%= @movie.stream_url %>"}
    ],
    image: "<%= @movie.image_url %>",
    title:"<%= @movie.name %>",
    width: '100%',
    height: 400,
    primary: 'flash'
});
<% else %>
jwplayer("video_wrapper").setup({
    sources: [
        {file: "<%= @movie.stream_url %>"}
    ],
    image: "<%= @movie.image_url %>",
    title:"<%= @movie.name %>",
    width: '100%',
    height: 400,
    primary: 'flash'
});
<% end %>
</script>
