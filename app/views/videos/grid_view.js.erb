    slidesToScroll: 6,
    responsive: [
        {
          breakpoint: 1200,
          settings: {
            slidesToShow: 7,
            slidesToScroll: 5,
            infinite: true
          }
        },
        {
          breakpoint: 1080,
          settings: {
            slidesToShow: 6,
            slidesToScroll: 4,
            infinite: true
          }
        },
        {
          breakpoint: 900,
          settings: {
            slidesToShow: 5,
