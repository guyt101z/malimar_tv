<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-md-3">
                <div class="panel panel-custom">
                    <div class="panel-heading">
                        <h3 class="fz14"><%= @channel.name %></h3>
                    </div>
                    <div class="panel-body b0">
                        <%= image_tag @channel.image_url, class: 'img-responsive' %>
                    </div>
                </div>
                <!--<div class="socials">
                    <a href="#"><span class="fb"></span></a>
                    <a href="#"><span class="tw"></span></a>
                    <a href="#"><span class="rss"></span></a>
                </div>-->
            </div>
            <div class="col-sm-8 col-md-9">
                <div class="box-white">
                    <div class="data-bb">
                        <%= simple_format(@channel.synopsis) %>
                    </div>
                    <div class='video_wrapper' id='video_wrapper'>

                    </div>
                </div>
                <%= render 'videos/partials/similar_links' %>
            </div>
        </div>
    </div>
</div><!--content-->
<script>
<% if @channel.rtmp_url.present? %>
jwplayer("video_wrapper").setup({
    sources: [
        {file: "<%= @channel.rtmp_url %>?token=<%= @token %>"},
        {file: "<%= @channel.stream_url %>?token=<%= @token %>"}
    ],
    image: "<%= @channel.image_url %>",
    title:"<%= @channel.name %>",
    width: '100%',
    height: 400,
    primary: 'flash'
});
<% else %>
jwplayer("video_wrapper").setup({
    sources: [
        {file: "<%= @channel.stream_url %>?token=<%= @token %>"}
    ],
    image: "<%= @channel.image_url %>",
    title:"<%= @channel.name %>",
    width: '100%',
    height: 400,
    primary: 'flash'
});
<% end %>
</script>
