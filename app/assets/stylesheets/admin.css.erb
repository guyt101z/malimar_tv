}

.message {
    position: relative;
}
.message_wrapper {
    height: 100%;
    position: absolute;
    top:0;
    left: 0;
    width: 100%;
}

.message_wrapper .attach_file {
    position: absolute;
    top: 5px;
    right: 5px;
    height: 70px;
    width: 100px;
    border: 2px dashed #eee;
    line-height: 60px;
    text-align: center;
    font-size: 40px;
    cursor: pointer;
    border-radius: 3px;
}
.message_wrapper .attach_file .progress {
    position: absolute;
    bottom: 2px;
    left: 3px;
    margin: 0;
    width: 90px;
    height: 8px;
    border-radius: 4px;
    border:0;
}
.message_wrapper .text_message {
    position: absolute;
    top: 5px;
    left: 5px;
    height: 70px;
    width: calc(100% - 115px);
}
.message_wrapper .text_message form {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}
.message_wrapper .text_message a {
    position: absolute;
    right: 0;
    display: block;
    height: 70px;
    text-align: center;
    width:100px;
    line-height: 66px;
    font-size: 24px;
    border: 2px solid #eee;
    cursor: pointer;
    text-decoration: none;
    border-radius: 3px;
}
.message_wrapper .text_message a:hover {
    background-color: #eee;
}
.message_wrapper .text_message textarea {
    position: absolute;
    top: 0;
    left: 0;
    height: 70px;
    width: calc(100% - 105px);
    border: 2px solid #eee;
    border-radius: 3px;
    resize: none;
}
.message .btn {
    margin-top: 5px;

    max-width: 200px;
    width: calc(100% - 80px);
    height: 70px;
    line-height: 68px;
    padding-top: 0;
    padding-bottom: 0;
}
.checklist {
    position: relative;
    max-width: 400px;
    height: 34px;
    margin-bottom: 1px;
}
.checklist-box {
    width: 15px;
    position: absolute;
    top: 0;
    left: 0;
    line-height: 34px;
}
.checklist-delete {
    width: 15px;
    position: absolute;
    top: 0;
    right: 0;
    line-height: 34px;
    cursor: pointer;
    color: #f00;
}
.checklist-item {
    width: calc(100% - 30px);
    position: absolute;
    top: 0;
    left: 15px;
    line-height: 34px;
}
.delete_note {
    position: absolute;
    top: 10px;
    right: 10px;
    cursor: pointer;
}

.withdrawal-field {
    padding-left: 35px;
}
.withdrawal-icon {
    position: absolute;
    top: 11px;
    left: 11px;
    width: 30px;
    text-align: center;
    background-color: #fff;
    border-top-left-radius: 3px;
    border-bottom-left-radius: 3px;
    border-right: 1px solid #ddd;
    height: 32px;
    line-height: 32px;
}
.grid_photo {
    max-height: 275px;
    padding-bottom: 20px;
    text-align: center;
    border: 1px solid #ddd;
    border-radius: 3px;
    overflow: hidden;
    position: relative;
}
.grid_photo img {
    max-height: 255px;
    max-width: 100%;
}
.grid_photo .upload_div {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 20px;
}
.upload_div .progress {
    margin: 0;
}

